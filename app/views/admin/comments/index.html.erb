<div class="container">
  <h2>コメント一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>コメント内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.body %></td>
        <td><%= link_to "削除", admin_track_comment_path(@track, comment), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
   <%= link_to "投稿一覧へ戻る",  admin_user_path(@track.user.id), class: 'btn btn-primary' %>
</div>