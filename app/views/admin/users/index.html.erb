<div class="container">
  <h2>ユーザ一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>ID</th>
        <th>ユーザー名</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= link_to "削除", admin_user_path(user.id), method: :delete, class: "btn btn-danger",  "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>