<h2 class="head-line title_h2 text-left bg-light d-inline-block">ユーザー管理一覧</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="text-center">ID</th>
      <th class="text-center">プロフィール画像</th>
      <th class="text-center">ユーザー名</th>
      <th class="text-center">削除</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td class="text-center"><%= user.id %></td>
      <td class="text-center"><%= image_tag user.get_profile_image, size: '100x100' %></td>
      <td class="text-center"><%= link_to user.name, admin_user_path(user.id) %></td>
      <td class="text-center"><%= link_to "アカウントを削除", admin_user_path(user.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
