<div class="container">
  <h2 class="head-line title_h2 text-left bg-light d-inline-block">ユーザ一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>ID</th>
        <th>プロフィール画像</th>
        <th>ユーザー名</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= image_tag user.get_profile_image, size: '100x100' %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= link_to "アカウントを削除", admin_user_path(user.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>