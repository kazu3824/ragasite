<table class='table'>
  <thead>
    <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
    <tr>
      <th>ユーザー</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <% if current_user.id == @user.id %>
        <% unless user.guest? %>
        <th>プロフィール編集</th>
        <th>
            <%= link_to edit_public_user_path(user) do%>
              <i class="btn btn-outline-secondary btn-block">
               <i class="fas fa-user-cog"></i>
              </i>
            <% end %>
        <% end %>
        </th>
      <% end %>
    </tr>
    <tr>
      <th>
      <% if current_user.id == @user.id %>
        <%= link_to "曲を投稿", public_tracks_path, class:"btn btn-success" %>
      <% end %>
        <%= link_to "いいねリスト", public_track_favorites_path, class:"btn btn-primary" %>
      </th>
    </tr>
    <tr>
      <% if current_user == @user %>
      <th>
          <%= link_to "プレイリスト作成", new_public_play_list_path, class:"btn btn-success" %>
      </th>
      <% end %>
    </tr>
  </thead>
</table>


