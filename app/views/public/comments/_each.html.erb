<table class="table table-hover table-inverse">
  <tbody>
    <% track.comments.each do |comment|%>
    <tr>
      <td>
        <%= image_tag comment.user.get_profile_image, size: "100x100" %><br>
        <%= link_to comment.user.name, public_user_path(comment.user.id) %>
      </td>
      <td><%= comment.body %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "コメント削除", public_track_comment_path(track, comment), method: :delete, class: "btn btn-danger pull-right",remote: true %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>