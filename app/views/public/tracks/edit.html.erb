<div class='row'>
  <div class="offset-sm-3 col-sm-6">
    <h2 class="head-line title_h2 text-left bg-light d-inline-block">曲投稿編集</h2>
    <%= form_with model: @track, url: public_track_path(@track.id), local:true do |f| %>
     <%= render 'public/shared/error_messages', resource: @track %>
      <div class="form-group">
        <%= f.label :曲名＊ %>
        <%= f.text_field :title, class: 'form-control track_title' %>
      </div>
      <div class="form-group">
        <%= f.label :歌手名＊ %>
        <%= f.text_field :artist_name, class: 'form-control track_title' %>
      </div>
      <div class="form-group">
        <%= f.label :概要 %>
        <%= f.text_area :description, class: 'form-control tarck_description' %>
      </div>
      <div class="form-group">
        <%= f.label :参考文献orリンク %>
        <%= f.text_field :url, class: 'form-control track_url' %>
      </div>
      <div class="form-group">
        <%= f.label :タグ＊ %>
        <%= f.select :tag_id, Tag.all.pluck(:name, :id), {}, { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.submit "編集する", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
