<div class="row">
  <div class="offset-sm-3 col-sm-6">
    <h2 class="head-line title_h2 text-left bg-light d-inline-block">曲投稿</h2>
    <%= render 'public/tracks/form', track: @track %>
  </div>
</div>
<h2 class="head-line title_h2 text-left bg-light d-inline-block">投稿一覧</h2>
  <div class="float-right">
    <%= form_with model: @search_tag, url: public_searches_tags_path,method: :get, local:true do |f| %>
      <div class="form-group">
        <%= f.label :タグ検索 %>
        <%= f.select :tag_id,Tag.all.pluck(:name, :id), class: 'form-control' %>
        <%= f.submit "検索", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div id="tracks">
    <%= render 'public/tracks/index', tracks: @tracks %>
  </div>
  <div id="pagenate">
    <%= paginate @tracks, remote: true %>
  </div>
</div>