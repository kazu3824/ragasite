<% if tracks.any? %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>ユーザー</th>
      <th>曲名</th>
      <th>歌手名</th>
      <th>いいね</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tracks.each do |track| %>
      <tr>
        <td><%= image_tag track.user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to track.user.name, public_user_path(track.user.id) %></td>
        <td><%= link_to track.title, public_track_path(track.id), class: "track_#{track.id}" %></td>
        <td><%= track.artist.name %></td>
        <!--td class="btn">-->
        <td id="favorite_buttons_<%= track.id %>">
          <%= render "public/track_favorites/btn", track: track %>
        </td>
        <td><%= track.comments.count %>：コメント</td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>