<% if tracks.any? %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th class="text-center">ユーザー名</th>
      <th class="text-center">曲名</th>
      <th class="text-center">歌手名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% tracks.each do |track| %>
    <tr>
      <td class="text-center"><%= image_tag track.user.get_profile_image, size: '50x50' %></td>
      <td class="text-center"><%= link_to track.user.name, public_user_path(track.user.id) %></td>
      <td class="text-center"><%= link_to track.title.truncate(30), public_track_path(track.id), class: "track_#{track.id}" %></td>
      <td class="text-center"><%= link_to track.artist.name.truncate(15), public_artist_path(track.artist.id) %></td>
      <td id="favorite_buttons_<%= track.id %>">
        <%= render "public/track_favorites/btn", track: track %>
      </td>
      <td class="text-center"><%= track.comments.count %>:コメント</td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>