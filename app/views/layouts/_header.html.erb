<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand" href="/"><span><%= image_tag asset_path('top_icon'), size:'50x50' %> RAGAサイト</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li class="mr-3">
            <%= link_to admin_users_path,class: 'btn btn-outline-light' do %>
              ユーザー
            <% end %>
          </li>
          <li class="mr-5">
            <%= link_to destroy_admin_session_path, method: :delete,class: 'btn btn-outline-light' do %>
              ログアウト
            <% end %>
          </li>
        <% elsif user_signed_in? %>
          <li class="mr-3">
            <%= link_to public_user_path(current_user),class: 'btn btn-outline-light' do %>
              マイページ
            <% end %>
          </li>
          <li class="mr-3">
            <%= link_to public_tracks_path,class: 'btn btn-outline-light ' do %>
              曲一覧
            <% end %>
          </li>
          <li class="mr-4">
            <%= link_to destroy_user_session_path, method: :delete,class: 'btn btn-outline-light' do %>
              ログアウト
            <% end %>
          </li>
          <li>
            <%= form_with model: @search_keyword, url: public_searches_keywords_path,method: :get, local:true do |f| %>
              <%= f.text_field :keyword, placeholder: "キーワードを入力", class: 'search_keyword' %>
              <%= f.submit "検索", class: 'btn btn-success btn-outline-light' %>
            <% end %>
          </li>
        <% else %>
          <li class="mr-4">
            <%= link_to root_path,class: 'btn btn-outline-light' do %>
              ホーム
            <% end %>
          </li>
          <li class="mr-4">
            <%= link_to home_about_path,class: 'btn btn-outline-light' do %>
              アバウト
            <% end %>
          </li>
          <li class="mr-4">
            <%= link_to new_user_registration_path,class: 'btn btn-outline-light' do %>
              新規登録
            <% end %>
          </li>
          <li class="mr-5">
            <%= link_to new_user_session_path,class: 'btn btn-outline-light' do %>
              ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
